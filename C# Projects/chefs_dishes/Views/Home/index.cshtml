@using System
@using ChefDish.Models
@model List<Chef>
  <!DOCTYPE html>
  <html>
  <head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="~/css/styles.css"  media="screen,projection"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        @* <a href="" class="brand-logo"></a> *@
        <ul id="nav-mobile" >
          <li><a href="/newchef">Add a Chef</a></li>
          <li><a href="/newdish">Add a Dish</a></li>
          <li><a href="/dishes">Dishes</a></li>
          <li><a href="/">Chefs</a></li>
        </ul>
      </div>
    </nav>
    <div id ="container" class="z-depth-3">
     
      <div id="content-container">
        <div id="dish-container">
          <h4>Chef Roster:</h4>
        <table>
        <thead>
          <tr>
              <th>Name</th>
              <th>Age</th>
              <th>Dishes Created</th>
          </tr>
        </thead>
        <tbody>
          @foreach(Chef person in Model)
          {
            int ChefAge = DateTime.Now.Year - person.ChefBirthday.Year;
            <tr>
              <td>@person.ChefFirstName @person.ChefLastName</td>
              <td>@ChefAge</td>
              <td>@person.CreatedDishes.Count</td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    </body>
    </div>
</html>
