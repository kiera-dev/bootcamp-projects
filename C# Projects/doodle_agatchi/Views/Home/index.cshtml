  <!DOCTYPE html>
  <html>
  <head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="~/css/styles.css"  media="screen,projection"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        @* <a href="" class="brand-logo"></a> *@
        <ul id="nav-mobile" >
          <li>Fullness: @ViewBag.fullness</li>
          <li>Happiness: @ViewBag.happiness</li>
          <li>Meals: @ViewBag.meals</li>
          <li>Energy: @ViewBag.energy</li>
        </ul>
      </div>
    </nav>
    <div id ="container" class="z-depth-3">
     
      <div id="content-container">
        <div id="game-container">

        
         @if(ViewBag.endState == false)
         {
          <img class="pet" src="~/images/SquidDoodle.png"/>
          <p>@ViewBag.message</p>  
          <a class="waves-effect waves-light btn-large disabled" href="/feed">Feed</a>
          <a class="waves-effect waves-light btn-large disabled" href="/play">Play</a>
          <a class="waves-effect waves-light btn-large disabled" href="/work">Work</a>
          <a class="waves-effect waves-light btn-large disabled" href="/sleep">Sleep</a>
          <a class="waves-effect waves-light btn-large" href="/clear">Reset</a>
         }
        else if(ViewBag.endState == true)
        {
          <img class ="pet" src="~/images/yay.png"/>
          <p>@ViewBag.message</p>  
          <a class="waves-effect waves-light btn-large disabled" href="/feed">Feed</a>
          <a class="waves-effect waves-light btn-large disabled" href="/play">Play</a>
          <a class="waves-effect waves-light btn-large disabled" href="/work">Work</a>
          <a class="waves-effect waves-light btn-large disabled" href="/sleep">Sleep</a>
          <a class="waves-effect waves-light btn-large" href="/clear">Reset</a>
        }
        else
        {
          <img class="pet" src="~/images/DoodleBob_Season_11.png"/>
          <p>@ViewBag.message</p>
          <a class="waves-effect waves-light btn-large" href="/feed">Feed</a>
          <a class="waves-effect waves-light btn-large" href="/play">Play</a>
          <a class="waves-effect waves-light btn-large" href="/work">Work</a>
          <a class="waves-effect waves-light btn-large" href="/sleep">Sleep</a>
          <a class="waves-effect waves-light btn-large disabled" href="/clear">Reset</a>
        }
      </div>
    </body>
    </div>
</html>
