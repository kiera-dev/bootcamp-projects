@using Survey.Models
@model FormData
  <!DOCTYPE html>
  <html>
  <head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="~/css/styles.css"  media="screen,projection"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="" class="brand-logo">Thing</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">  
        </ul>
      </div>
    </nav>
    <div id ='container' class="z-depth-3">
     
      <div id='form-container'>
        <h4>Survey:</h4>
           <form asp-action="CreateData" asp-controller="Home" method="post">

          <div class="row">
            <div class="input-field col s6">
           <span asp-validation-for="PersonName"></span>
            @* <label asp-for="PersonName"></label> *@
            <p>Name:</p>
            <input asp-for="PersonName" required minlength="2">
            </div>
          </div>
                    <div class="row">
            <div class="input-field col s12">
        <span asp-validation-for="Location"></span>
                                   <p>Location:</p>
                                    <select asp-for="Location" class="browser-default" required>
                                      
                                      <option value="" disabled selected></option>
                                      <option value="Earth">Earth</option>
                                      <option value="Mars">Mars</option>
                                      <option value="Venus">Venus</option>
                                      <option value="A Spaceship">A Spaceship</option>
                                      <option value="The Moon">The Moon</option>
                                    </select>
            </div>
          </div>

                                        <div class="row">
            <div class="input-field col s12">
                                                  <span asp-validation-for="Favorite"></span>
                                    @* <label asp-for="Favorite"></label> *@
                                    <p>Favorite Breakfast Food:</p>
                                    <select asp-for="Favorite" class="browser-default" required>
                                      <option value=""></option>
                                      <option value="Donut">Donut</option>
                                      <option value="Waffle">Waffle</option>
                                      <option value="Pancake">Pancake</option>
                                      <option value="Sugar">Sugar</option>
                                      <option value="Muffin">Muffin</option>
                                    </select>
            </div>
          </div>

                                        <div class="row">
            <div class="input-field col s6">
                                  <div class="mdl-textfield mdl-js-textfield">
                                    <span asp-validation-for="Comment"></span>
                                    <p>Comment:</p>
                                    @* <label asp-for="Comment"></label> *@
                                    <input type="text" asp-for="Comment" maxlength="20">
                                    </div>
            </div>
          </div>
          <button class="waves-effect waves-light btn"
          type='submit'>Beep Boop Submit</button>
        </section>
      </form>
</body>
</div>
</html>